@model IEnumerable<ServicoAssociadoWeb.Integrations.Models.APIServicosAssociado.ResponseAgendamentoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agendamentos</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Tipo
            </th>
            <th>
                Associado
            </th>
            <th>
                Conveniado
            </th>
            <th>
                Data/Hora do Atendimento
            </th>
            <th>
                Data/Hora do Agendamento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoAtendimento.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Associado.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Conveniado.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAtendimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAgendamento)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                    @Html.ActionLink("Detalhar", "Details", new { id = item.Id })  @*|
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create">Criar Agendamento</a>
</p>
